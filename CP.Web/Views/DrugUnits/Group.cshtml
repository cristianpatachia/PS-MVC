@using CP.Data.Models
@model Dictionary<string, List<DrugUnit>>

@{
    ViewBag.Title = "Group";
}

<h2>DrugUnits grouped by Type</h2>

        <p>
            @Html.ActionLink("DrugUnits Full List", "Index")
        </p>
        <table class="table">
            <tr>
                <th>
                    Type
                </th>
                <th>
                    Details (Name, Depot, Site, PickNumber)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Key)
                    </td>
                        <td>
                            @foreach (var val in item.Value)
                            {
                                <div>
                                    Name:      @val.DrugUnitName,
                                    Depot:     @val.DrugUnitDepot,
                                    Site:      @val.DestinationSite,
                                    PickNumber @val.PickNumber
                                </div>
                            }
                        </td>
                    <td>
                    </td>
                </tr>
            }

        </table>
