@using CP.Data.Models
@model Dictionary<string, List<DrugUnit>>

@{
    ViewBag.Title = "Inventory";
}

<h2>Depot Inventory Details</h2>

<p>
    @Html.ActionLink("Depot List", "Index")
</p>
<table class="table">
    <tr>
        <th>
            Depot
        </th>
        <th>
            Inventory Details (DrugType, DrugName, Site, PickNumber)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Key)
            </td>
                <td>
                    @foreach (var val in item.Value)
                    {
                        <div>
                            Type:        @val.AssignedTypeName,
                            Name:        @val.DrugUnitName,
                            Shipment to: @val.DrugUnitDepot,
                            PickNumber:  @val.PickNumber
                        </div>
                    }
                </td>
            <td></td>
        </tr>
    }
</table>
