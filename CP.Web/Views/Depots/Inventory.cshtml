@using CP.Web.Models
@model Dictionary<string, List<DepotWeightViewModel>>
@*@model List<DepotWeightViewModel>*@

@{
    ViewBag.Title = "Inventory";
}

<h2>Depot Inventory Details</h2>

<p>
    @Html.ActionLink("Depot List", "Index")
</p>
<table class="table">
    <tr>
        <th>
            Depot
        </th>
        <th>
            Inventory Details (DrugType, DrugName, UnitWeight)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Key)
            </td>
            <td>
                @foreach (var val in item.Value)
                {
                    <div>
                        Type:       @val.UnitType,
                        Name:       @val.UnitName,
                        Weight (kgs):     @val.Weight
                    </div>
                }
            </td>
            <td></td>
        </tr>
    }
</table>
